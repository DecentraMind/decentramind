{
  "i18n-ally.localesPaths": [
    "lang"
  ],


  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit"
  },


  "eslint.validate": [
    // eslint规则对以下几种后缀文件生效. 默认为["javascript", "javascriptreact"]
    //"vue",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
    // 使能每一种语言默认格式化规则
  "[json]": {
    // 对json文件，使用 JSON语言功能 进行格式化
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  ///"[vue]": {
    // 可选值： eslint ："dbaeumer.vscode-eslint"  vetur: "octref.vetur"   prettier: "esbenp.prettier-vscode"
    // 对 vue 文件，使用 prettier（格式化规则） + eslint（校验） 进行格式化，也可以选择 vetur 插件，或者单独选择prettier不加eslint
  ///  "editor.defaultFormatter": "Vue.volar"
  ///},
  "[typescript]": {
    // 对ts文件进行格式化时，使用哪一种风格 (此处使用的是vscode中安装的ts插件默认风格进行格式化)
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "search.exclude": {
    // VScode进行文件搜索时，不搜索这些区域。
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.gitignore": true,
    "**/.idea": true,
    "**/.svn": true,
    "**/.vscode": true,
    "**/build": true,
    "**/dist": true,
    "**/tmp": true,
    "**/yarn.lock": true,
    "**/assets": true
  },
  "i18n-ally.keystyle": "nested",
  "cSpell.words": [
    "ario",
    "Decentra",
    "EVERLAND",
    "heroicons",
    "ofetch",
    "othent",
    "permagate",
    "Permaswap",
    "Slideover",
    "ssim",
    "vueuse",
    "yxxx"
  ],
  "Lua.workspace.library": [
    "/Users/apple/Library/Application Support/Cursor/User/globalStorage/sumneko.lua/addonManager/addons/ao/module/library"
  ],
  "Lua.workspace.checkThirdParty": false,

  "Lua.diagnostics.groupSeverity": {
    "ambiguity": "Warning",
    "type-check": "Warning",
    "unused": "Warning",
    "duplicate": "Error",
    "redefined": "Error",
    "codestyle": "Warning",
    "strong": "Error",
    "conventions": "Warning"
  },
  "Lua.diagnostics.libraryFiles": "Enable",
  "Lua.diagnostics.severity": {
    "undefined-field": "Error",
    "unused-local": "Error",
    "assign-type-mismatch": "Warning",
    "codestyle-check": "Warning",
    "unknown-cast-variable": "Warning",
    "unknown-diag-code": "Warning",
    "no-unknown": "Error",
    "ambiguity-1": "Warning"
  },
  "Lua.hint.setType": true,
  "Lua.hint.enable": true,
  "Lua.type.checkTableShape": true,
  "Lua.type.inferParamType": true,
  "files.exclude": {
    ".nuxt": true,
    "node_modules": true
  },
  "javascript.preferGoToSourceDefinition": true,
  "typescript.preferGoToSourceDefinition": true,
}
